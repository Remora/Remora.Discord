<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>55.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations for the abstract API definitions, provided by
            Remora.Discord.API.Abstractions.
        </Description>
        <PackageReleaseNotes>
            Mark the API version enumeration as public.
            Mark some more types as PublicAPI.
            Implement default_auto_archive_duration for channel creation.
            Remove the "none" flag.
            Implement GuildID in InteractionData.
            Add PropertyConverter for IApplicationCommandInteractionDataResolved.Attachments
        </PackageReleaseNotes>
    </PropertyGroup>

