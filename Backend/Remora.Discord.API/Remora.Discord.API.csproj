<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>59.0.0</Version>
        <Description>Remora.Discord's implementation of Discord's API objects</Description>
        <PackageReleaseNotes>
            Add support for thread_name.
            Discord now considers v10 the stable default.
            Add a default version alias.
            Remove references to discontinued API versions.
            Update optionality and nullability.
            Add support for guild member banners in the CDN.
            Rename endpoint to match documentation.
            fix nullability of defaultMemberPermissions param
        </PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
