<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <Version>54.0.0</Version>
        <Description>
            $(BaseDescription)

            This package contains the default implementations for the abstract API definitions, provided by
            Remora.Discord.API.Abstractions.
        </Description>
        <PackageReleaseNotes>
            Implement guild ban pagination.
            Implement support for guild directories.
            Implement support for default authorization.
            Implement support for stage start notifications.
            Remove store channels.
            Implement support for animated guild banners.
            Remove deprecated field.
            Mark channel name as nullable.
            Update enumeration name.
            Add image_hash audit log change key.
        </PackageReleaseNotes>
    </PropertyGroup>

